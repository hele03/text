<mvc:View controllerName="zprogetto.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:tnt="sap.tnt">
    <Page id="page" title="{i18n>title}">
        <content />
        <Table id="Tabella" items="{path: 'Modello>/lista',length:'10'}" mode="SingleSelectLeft" selectionChange="popolatabella">
            <headerToolbar>
                <OverflowToolbar>
                    <form:SimpleForm width="100%">
                        <Select id="anno" forceSelection="false" selectedKey="{/SelectedProduct}" items="{
													path: '/ProductCollection',
													sorter: { path: 'Name' }
												}" value="{/Mezzotrasporto}">
                            <core:ListItem key="{ProductId}" text="{Name}" icon="{Icon}" />
                        </Select>
                        <Select id="atto" forceSelection="false" selectedKey="{/SelectedProduct}" items="{
													path: '/ProductCollection',
													sorter: { path: 'Name' }
												}" value="{/Mezzotrasporto}">
                            <core:ListItem key="{ProductId}" text="{Name}" icon="{Icon}" />
                        </Select>
                        <Select id="stato" forceSelection="false" selectedKey="{/SelectedProduct}" items="{
													path: '/ProductCollection',
													sorter: { path: 'Name' }
												}" value="{/Mezzotrasporto}">
                            <core:ListItem key="{ProductId}" text="{Name}" icon="{Icon}" />
                        </Select>
                        <Select id="prospetto" forceSelection="false" selectedKey="{/SelectedProduct}" items="{
													path: '/ProductCollection',
													sorter: { path: 'Name' }
												}" value="{/Mezzotrasporto}">
                            <core:ListItem key="{ProductId}" text="{Name}" icon="{Icon}" />
                        </Select>
                        <Button id="cerca" text="cerca" press="cerca" />
                        <!--bottone per filtro-->
                        <ToolbarSpacer />
                        <Button id="cancella" text="cancella" press="cancella" />
                        <!--bottone per la-->
                    </form:SimpleForm>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Stato Prev." />
                </Column>
                <Column>
                    <Text text="Numero Pros." />
                </Column>
                <Column>
                    <Text text="Descrizione Prosp." />
                </Column>
                <Column>
                    <Text text="Nota Bene" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{Modello>name}" />
                    </cells>
                    <cells>
                        <Text text="{Modello>username}" />
                    </cells>
                    <cells>
                        <Text text="{Modello>email}" />
                    </cells>
                    <cells>
                        <Button text="Nota Bene" />
                        <!--bottone del nota bene-->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <footer>
            <OverflowToolbar>
               
                <Button text="Export"  icon="sap-icon://excel-attachment" press="onExport" />
                <ToolbarSpacer />
                <Button text="Salva" press="Salva" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
