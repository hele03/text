<mvc:View controllerName="zprogetto.controller.Home" 
   xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:tnt="sap.tnt">
    <Page id="page">
        <HeaderContainer >
        <!-- <OverflowToolbar> -->
                        <Label text="Anno"/>
                        <Select id="anno" items="{/lista/Fase}">
                            <core:Item text="{Anno}"/>
                        </Select>
                        <Label text="Descrizione"/>
                        <Select id="descrizione" items="{/lista/Fase}">
                            <core:Item text="{Descrizione}"/>
                        </Select>
                        <Label text="Amministrazione"/>
                        <Select id="amministrazione" items="{/lista/Prospetti}">
                            <core:Item text="{AMMINISTRAZIONE}"/>
                        </Select>

                        <Label text="Progetto"/>
                        <Select id="progetto" items="{/lista/Prospetti}">
                            <core:Item text="{PROSPETTO}"/>
                        </Select>
                        <ToolbarSeparator />
                        <Button id="cerca" text="cerca" press="cerca" />
                        <!-- <ToolbarSpacer /> -->
                        <Button id="cancella" text="cancella" press="cancella" />
                   
                <!-- </OverflowToolbar> -->
        </HeaderContainer>
        <Table id="Tabella" items="{path: '/lista/Prospetti'}" mode="SingleSelectLeft" selectionChange="popolatabella">
            
            <columns>
                <Column>
                    <Text text="Stato Prev." />
                </Column>
                <Column>
                    <Text text="Numero Pros." />
                </Column>
                <Column>
                    <Text text="Descrizione Prosp." />
                </Column>
                <Column>
                    <Text text="Nota Bene" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells >
                        <Text text="{AMMINISTRAZIONE}" />
                    </cells>
                    <cells>
                        <Text text="{DESCRIZIONE}" />
                    </cells>
                    <cells>
                         <Text text="{PROSPETTO}" />
                    </cells>
                    <cells>
                        <Button text="Nota Bene" press=".onSubmitDialogPress" 
                                class="sapUiSmallMarginBottom" type="Emphasized" ariaHasPopup="Dialog"/>
                        
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <footer>
            <OverflowToolbar>
                <Button text="Export" icon="sap-icon://excel-attachment" press="onExport" />
                <ToolbarSpacer />
                <Button text="Salva" press="salva" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
